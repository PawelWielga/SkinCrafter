{
  "name": "skincrafter",
  "private": true,
  "version": "1.0.0",
  "description": "SkinCrafter is a small React + TypeScript application for previewing Minecraft skins. The preview uses Three.js and React Router to display the model in 3D across multiple pages.",
  "main": "generate-sitemap.js",
  "homepage": "https://skincrafter.dihor.pl",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "sitemap": "node generate-sitemap.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "test": "jest"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.2.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/three": "^0.178.1",
    "@vitejs/plugin-react": "^4.1.0",
    "babel-jest": "^29.7.0",
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.2.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
